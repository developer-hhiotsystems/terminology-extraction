# Staging Environment Configuration

# Application
ENVIRONMENT=staging
DEBUG=false

# Server
API_HOST=0.0.0.0
API_PORT=9123
API_WORKERS=2
RELOAD=false

# Database
DATABASE_URL=sqlite:///data/glossary.db

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Security
SECRET_KEY=  # SET THIS!
ALLOWED_ORIGINS=https://staging.yourglossary.com

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Backup
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=14
BACKUP_SCHEDULE=0 3 * * *  # Daily at 3 AM

# Error Tracking
SENTRY_ENABLED=true
SENTRY_DSN=  # SET THIS!
SENTRY_ENVIRONMENT=staging

# Development Tools (enabled for testing)
DOCS_ENABLED=true
SHOW_ERROR_DETAILS=true

# Performance
QUERY_LOGGING=true
SLOW_QUERY_THRESHOLD_MS=1000

# Frontend
FRONTEND_URL=https://staging.yourglossary.com
