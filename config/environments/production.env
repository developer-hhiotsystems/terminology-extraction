# Production Environment Configuration

# Application
ENVIRONMENT=production
DEBUG=false

# Server
API_HOST=0.0.0.0
API_PORT=9123
API_WORKERS=4
RELOAD=false

# Database
DATABASE_URL=sqlite:///data/glossary.db

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_BACKUP_COUNT=30

# Security
SECRET_KEY=  # REQUIRED! Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
ALLOWED_ORIGINS=https://yourglossary.com,https://www.yourglossary.com

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Backup
BACKUP_ENABLED=true
BACKUP_DIR=/var/backups/glossary
BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESS=true
BACKUP_VERIFY=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM

# Health Monitoring
HEALTH_CHECK_ENABLED=true
DISK_WARNING_THRESHOLD_GB=10.0
DISK_CRITICAL_THRESHOLD_GB=2.0
MEMORY_WARNING_THRESHOLD_PERCENT=80.0
MEMORY_CRITICAL_THRESHOLD_PERCENT=90.0

# Error Tracking
SENTRY_ENABLED=true
SENTRY_DSN=  # REQUIRED for production!
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_ENVIRONMENT=production

# Development Tools (DISABLED in production)
AUTO_RELOAD=false
SHOW_ERROR_DETAILS=false
DOCS_ENABLED=false

# Production Optimizations
GZIP_ENABLED=true
GZIP_MINIMUM_SIZE=1000
RESPONSE_CACHE_ENABLED=true
CACHE_ENABLED=true
CACHE_TTL=300

# Performance
QUERY_LOGGING=false
SLOW_QUERY_THRESHOLD_MS=1000
REQUEST_TIMEOUT=30
CONNECTION_POOL_SIZE=20

# Frontend
FRONTEND_URL=https://yourglossary.com

# Email Notifications (Optional)
EMAIL_ENABLED=true
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=  # SET THIS!
SMTP_PASSWORD=  # SET THIS!
SMTP_FROM=glossary-app@yourglossary.com
SMTP_TO=admin@yourglossary.com

# Monitoring
METRICS_ENABLED=true
PROMETHEUS_ENABLED=true
