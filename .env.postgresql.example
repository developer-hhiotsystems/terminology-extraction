# PostgreSQL Configuration Example
# Copy this to .env and update with your PostgreSQL credentials

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database Type: "sqlite" or "postgresql"
DATABASE_TYPE=postgresql

# Option 1: Use individual PostgreSQL components (recommended)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=glossary
POSTGRES_USER=glossary_user
POSTGRES_PASSWORD=your_secure_password_here

# Option 2: Or provide full DATABASE_URL directly
# DATABASE_URL=postgresql://glossary_user:your_password@localhost:5432/glossary

# PostgreSQL Connection Pool Settings
POSTGRES_POOL_SIZE=5
POSTGRES_MAX_OVERFLOW=10
POSTGRES_POOL_TIMEOUT=30
POSTGRES_POOL_RECYCLE=3600

# =============================================================================
# MIGRATION SETTINGS
# =============================================================================

# Enable database migrations (Alembic)
ENABLE_MIGRATIONS=True

# =============================================================================
# APPLICATION SETTINGS (same as before)
# =============================================================================

# Neo4j
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password

# DeepL Translation
DEEPL_API_KEY=your_deepl_api_key

# Server
API_HOST=0.0.0.0
API_PORT=9123
FRONTEND_URL=http://localhost:3000

# Development
DEBUG=False
LOG_LEVEL=INFO

# File Upload
UPLOAD_DIR=./data/uploads
MAX_FILE_SIZE_MB=50

# Backup
SQLITE_BACKUP_DIR=./backups/sqlite
NEO4J_BACKUP_DIR=./backups/neo4j
BACKUP_RETENTION_DAYS=30
