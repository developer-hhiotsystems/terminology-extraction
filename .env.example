# Database Configuration
DATABASE_URL=sqlite:///./data/glossary.db

# Neo4j Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=devpassword

# DeepL Translation API
# Free tier: 500,000 characters/month
# Sign up at: https://www.deepl.com/pro-api
DEEPL_API_KEY=YOUR_DEEPL_API_KEY_HERE

# IATE Dataset Path
# Download from: https://iate.europa.eu/download-iate
IATE_DATASET_PATH=./data/iate/IATE_export.tbx

# Upload Configuration
UPLOAD_DIR=./data/uploads
MAX_FILE_SIZE_MB=50

# Backup Configuration
SQLITE_BACKUP_DIR=./backups/sqlite
NEO4J_BACKUP_DIR=./backups/neo4j
BACKUP_RETENTION_DAYS=30

# Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
FRONTEND_URL=http://localhost:3000

# Development Settings
DEBUG=True
LOG_LEVEL=INFO
